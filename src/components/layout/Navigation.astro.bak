---
// Static navigation - collections are hardcoded in the dropdown
---

<header class="bg-[#151515] border-b border-gray-800 sticky top-0 z-50">
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <!-- TSK Diamond Logo -->
          <div
            class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 transform rotate-45 flex items-center justify-center"
          >
            <span class="text-white font-bold text-lg transform -rotate-45"
              >TSK</span
            >
          </div>
          <span class="text-xl font-bold text-white">TSK Sound Kits</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-300 hover:text-white transition-colors">
          HOME
        </a>

        <a
          href="/popular"
          class="text-gray-300 hover:text-white transition-colors"
        >
          POPULAR
        </a>

        <a
          href="/new-kits"
          class="text-gray-300 hover:text-white transition-colors"
        >
          NEW KITS
        </a>

        <!-- Categories Dropdown -->
        <div class="relative group">
          <button
            class="flex items-center space-x-1 text-gray-300 hover:text-white transition-colors"
          >
            <span>CATEGORIES</span>
            <svg
              class="w-4 h-4 transition-transform group-hover:rotate-180"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div
            class="absolute left-0 mt-2 w-48 bg-[#1a1a1a] border border-gray-700 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50"
          >
            <div class="py-2">
              <a
                href="/products"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                ALL PRODUCTS
              </a>
              <a
                href="/collections/drum-kits"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                DRUM KITS
              </a>
              <a
                href="/collections/one-shots"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                ONE SHOTS
              </a>
              <a
                href="/collections/presets"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                PRESETS
              </a>
              <a
                href="/collections/bundles"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                BUNDLES
              </a>
              <a
                href="/collections/0a0a"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                /0A0A/
              </a>
            </div>
          </div>
        </div>

        <a
          href="/free-kit-300"
          class="text-gray-300 hover:text-white transition-colors"
        >
          FREE KIT 300+
        </a>

        <a
          href="/contact"
          class="text-gray-300 hover:text-white transition-colors"
        >
          CONTACT
        </a>

        <!-- Browse Products -->
        <a
          href="/products"
          class="text-gray-300 hover:text-white transition-colors relative"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 11H5m0 0l4-4m-4 4l4 4"></path>
          </svg>
        </a>

        <!-- User Account -->
        <a
          href="/account"
          class="text-gray-300 hover:text-white transition-colors"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            ></path>
          </svg>
        </a>

        <!-- Currency Selector -->
        <div class="text-gray-300 text-sm">United States | USD $</div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-gray-300 hover:text-white transition-colors"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div
        class="px-2 pt-2 pb-3 space-y-1 bg-gray-900 border-t border-gray-800"
      >
        <a
          href="/"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          HOME
        </a>
        <a
          href="/popular"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          POPULAR
        </a>
        <a
          href="/new-kits"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          NEW KITS
        </a>

        <!-- Mobile Categories -->
        <div class="border-t border-gray-700 pt-2">
          <div class="px-3 py-2 text-gray-400 text-sm font-semibold">
            CATEGORIES
          </div>
          <a
            href="/products"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            All Products
          </a>
          <a
            href="/collections/drum-kits"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            Drum Kits
          </a>
          <a
            href="/collections/one-shots"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            One Shots
          </a>
          <a
            href="/collections/presets"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            Presets
          </a>
          <a
            href="/collections/bundles"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            Bundles
          </a>
          <a
            href="/collections/0a0a"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            /0A0A/
          </a>
        </div>

        <a
          href="/free-kit-300"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          FREE KIT 300+
        </a>

        <a
          href="/contact"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          CONTACT
        </a>

        <a
          href="/cart"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          Cart
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
