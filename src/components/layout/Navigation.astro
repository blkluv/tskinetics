---
// Static navigation - collections are hardcoded in the dropdown
const { currentPage } = Astro.props;

// Function to check if current page matches the link
const isActivePage = (page: string) => {
  if (currentPage === page) return true;
  if (currentPage === "/" && page === "home") return true;
  if (currentPage === "/popular" && page === "popular") return true;
  if (currentPage === "/new-releases" && page === "new-releases") return true;
  if (currentPage === "/products" && page === "products") return true;
  if (currentPage === "/blog" && page === "blog") return true;
  if (currentPage?.startsWith("/blog/") && page === "blog") return true;
  if (currentPage === "/free-kit-300" && page === "free-kit") return true;
  if (currentPage === "/contact" && page === "contact") return true;
  return false;
};

// Active link classes
const activeLinkClass = "text-white relative after:absolute after:bottom-[-8px] after:left-0 after:right-0 after:h-0.5 after:bg-white after:content-['']";
const inactiveLinkClass = "text-gray-300 hover:text-white transition-colors";
---
<header class="bg-[#151515] border-b border-gray-800 sticky top-0 z-50">
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <!-- TSK Diamond Logo -->
          <div
            class="w-14 h-14 bg-gradient-to-br from-orange-500 to-orange-600 transform rotate-45 flex items-center justify-center"
          >
            <span class="text-white font-bold text-xl transform -rotate-45"
              >TSK</span
            >
          </div>
          <span class="text-xl font-bold text-white">TSK Sound Kits</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class={isActivePage("home") ? activeLinkClass : inactiveLinkClass}>
          HOME
        </a>

        <a
          href="/popular"
          class={isActivePage("popular") ? activeLinkClass : inactiveLinkClass}
        >
          POPULAR
        </a>

        <a
          href="/new-releases"
          class={isActivePage("new-releases") ? activeLinkClass : inactiveLinkClass}
        >
          NEW RELEASES
        </a>

        <a
          href="/blog"
          class={isActivePage("blog") ? activeLinkClass : inactiveLinkClass}
        >
          BLOG
        </a>

        <!-- Categories Dropdown -->
        <div class="relative group">
          <button
            class="flex items-center space-x-1 text-gray-300 hover:text-white transition-colors"
          >
            <span>CATEGORIES</span>
            <svg
              class="w-4 h-4 transition-transform group-hover:rotate-180"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div
            class="absolute left-0 mt-2 w-48 bg-[#1a1a1a] border border-gray-700 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50"
          >
            <div class="py-2">
              <a
                href="/products"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                ALL PRODUCTS
              </a>
              <a
                href="/categories/one-shots"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                ONE SHOTS
              </a>
              <a
                href="/categories/drum-kits"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                DRUM KITS
              </a>
              <a
                href="/categories/presets"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                PRESETS
              </a>
              <a
                href="/categories/midi"
                class="block px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-800 transition-colors"
              >
                MIDI
              </a>
            </div>
          </div>
        </div>

        <a
          href="/free-kit-300"
          class={isActivePage("free-kit") ? activeLinkClass : inactiveLinkClass}
        >
          FREE KIT 300+
        </a>

        <a
          href="/contact"
          class={isActivePage("contact") ? activeLinkClass : inactiveLinkClass}
        >
          CONTACT
        </a>

        <!-- Shopping Cart -->
        <a
          href="/cart"
          class="text-gray-300 hover:text-white transition-colors relative"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13v6a2 2 0 002 2h6a2 2 0 002-2v-6m-8 0V9a2 2 0 012-2h4a2 2 0 012 2v4.01"
            ></path>
          </svg>
          <span id="cart-count" class="absolute -top-2 -right-2 bg-orange-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center hidden">0</span>
        </a>


        <!-- Currency Selector -->
        <div class="text-gray-300 text-sm">United States | USD $</div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-gray-300 hover:text-white transition-colors"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div
        class="px-2 pt-2 pb-3 space-y-1 bg-gray-900 border-t border-gray-800"
      >
        <a
          href="/"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          HOME
        </a>
        <a
          href="/popular"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          POPULAR
        </a>
        <a
          href="/new-releases"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          NEW RELEASES
        </a>
        
        <a
          href="/blog"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          BLOG
        </a>

        <!-- Mobile Categories -->
        <div class="border-t border-gray-700 pt-2">
          <div class="px-3 py-2 text-gray-400 text-sm font-semibold">
            CATEGORIES
          </div>
          <a
            href="/products"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            All Products
          </a>
          <a
            href="/categories/one-shots"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            One Shots
          </a>
          <a
            href="/categories/drum-kits"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            Drum Kits
          </a>
          <a
            href="/categories/presets"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            Presets
          </a>
          <a
            href="/categories/midi"
            class="block px-6 py-2 text-gray-300 hover:text-white transition-colors"
          >
            MIDI
          </a>
        </div>

        <a
          href="/free-kit-300"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          FREE KIT 300+
        </a>

        <a
          href="/contact"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          CONTACT
        </a>

        <a
          href="/cart"
          class="block px-3 py-2 text-gray-300 hover:text-white transition-colors"
        >
          Cart
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }

  // Cart count functionality
  function updateCartCount() {
    try {
      const cartData = localStorage.getItem('gumroad_cart');
      let count = 0;
      
      if (cartData) {
        const cart = JSON.parse(cartData);
        count = cart.items ? cart.items.reduce((total: number, item: any) => total + item.quantity, 0) : 0;
      }
      
      const cartCountElement = document.getElementById('cart-count');
      if (cartCountElement) {
        cartCountElement.textContent = count.toString();
        cartCountElement.classList.toggle('hidden', count === 0);
      }
    } catch (error) {
      console.error('Error updating cart count:', error);
    }
  }

  // Update cart count on page load
  document.addEventListener('DOMContentLoaded', updateCartCount);

  // Listen for cart updates from other pages
  window.addEventListener('storage', (e) => {
    if (e.key === 'gumroad_cart') {
      updateCartCount();
    }
  });

  // Update cart count when focus returns to window
  window.addEventListener('focus', updateCartCount);
</script>
