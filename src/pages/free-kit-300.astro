	<script>
		// Gradient extraction from cover art (like product page)
		document.addEventListener("DOMContentLoaded", function () {
			const cover = document.getElementById("cover-art");
			const grad = document.getElementById("cover-gradient");
			if (!cover || !grad) return;
			function updateGradientFromCover() {
				try {
					const img = cover as HTMLImageElement;
					if (!img || !(img instanceof HTMLImageElement)) return;
					if (!img.complete) {
						img.onload = updateGradientFromCover;
						return;
					}
					const canvas = document.createElement("canvas");
					canvas.width = 1;
					canvas.height = 32;
					const ctx = canvas.getContext("2d");
					if (!ctx) throw new Error("No 2D context");
					ctx.drawImage(img, 0, 0, 1, 32);
					const data = ctx.getImageData(0, 0, 1, 32).data;
					const stops = [0, 8, 16, 24, 31];
					const colors = stops.map(
						(i) =>
							`rgba(${data[i * 4]},${data[i * 4 + 1]},${data[i * 4 + 2]},1)`,
					);
					(grad as HTMLElement).style.background =
						`linear-gradient(120deg, ${colors[0]} 0%, ${colors[colors.length - 1]} 100%)`;
				} catch (e) {
					if (grad)
						(grad as HTMLElement).style.background =
							"linear-gradient(120deg, #2d1a4a 0%, #1a1a1a 100%)";
				}
			}
			updateGradientFromCover();
		});
	</script>

