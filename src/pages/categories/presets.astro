---
import Layout from "../../layouts/Layout.astro";
import { fetchProducts } from "../../lib/gumroad";
import type { GumroadProduct } from "../../lib/types";

let products: GumroadProduct[] = [];
let error: string | null = null;

try {
  console.log("Fetching presets products...");
  const allProducts = await fetchProducts(50);
  
  // Filter products by tags containing "presets", "synth presets", "preset pack"
  const presetsKeywords = ['presets', 'synth presets', 'preset pack', 'preset'];
  
  products = allProducts.filter(product => {
    if (!product.tags) return false;
    const tags = typeof product.tags === 'string' ? product.tags.toLowerCase() : String(product.tags).toLowerCase();
    return presetsKeywords.some(keyword => tags.includes(keyword));
  });
  
  console.log(`Successfully fetched ${products.length} presets products`);
} catch (e) {
  error = e instanceof Error ? e.message : "Failed to fetch presets products";
  console.error("Error fetching presets products:", e);
}
---

<Layout title="Presets - TSK Sound Kits">
  <main class="bg-[#151515] py-20 min-h-screen">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Page Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-white mb-4">PRESETS</h1>
        <p class="text-gray-400 text-lg">
          Synthesizer presets and sound bank configurations
        </p>
      </div>

      {
        error ? (
          <div class="text-center py-12">
            <div class="bg-red-900/50 border border-red-700 rounded-lg p-6 max-w-2xl mx-auto">
              <h3 class="text-red-400 font-semibold text-lg mb-2">
                Error Loading Products
              </h3>
              <p class="text-red-300 text-sm mb-4">{error}</p>
              <p class="text-gray-400 text-xs">
                Please check your Gumroad configuration in the .env file.
              </p>
            </div>
          </div>
        ) : products.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {products.map((product) => {
              const imageUrl = product.thumbnail_url || product.cover_url;
              const productUrl = `/products/${product.id}`;

              return (
                <div class="group">
                  <a href={productUrl} class="block">
                    <div class="aspect-square mb-4 overflow-hidden rounded-lg">
                      <img
                        src={imageUrl || "/images/bg.png"}
                        alt={product.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                        onerror="this.src='/images/bg.png';"
                      />
                    </div>
                  </a>
                  <a href={productUrl} class="block">
                    <h3 class="text-white font-bold text-xl mb-2 uppercase hover:text-gray-300 transition-colors h-14 flex items-center">
                      {product.title}
                    </h3>
                  </a>
                  <p class="text-white text-xl font-semibold mb-4">
                    {product.formatted_price}
                  </p>
                  <a
                    href={productUrl}
                    class="inline-block border border-white text-white px-6 py-2 hover:bg-white hover:text-black transition-colors duration-300 text-sm font-semibold"
                  >
                    VIEW PRODUCT
                  </a>
                </div>
              );
            })}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="bg-gray-800 rounded-lg p-8 max-w-2xl mx-auto">
              <h3 class="text-white font-semibold text-lg mb-2">
                No Presets Available
              </h3>
              <p class="text-gray-400 mb-4">
                We're currently working on adding more presets. Please check back soon!
              </p>
            </div>
          </div>
        )
      }
    </div>
  </main>
</Layout>