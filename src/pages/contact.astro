---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us - TSK Sound Kits">
    <main
        class="min-h-screen bg-gradient-to-br from-teal-400 via-cyan-500 to-blue-600"
    >
        <div class="container mx-auto px-4 py-20">
            <!-- Page Header -->
            <div class="text-center mb-16">
                <h1 class="text-5xl md:text-6xl font-bold text-black mb-8">
                    CONTACT US
                </h1>
            </div>

            <div class="max-w-6xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
                    <!-- Contact Info -->
                    <div class="bg-black rounded-lg p-8 md:p-12">
                        <h2 class="text-3xl font-bold text-white mb-6">
                            CONTACT INFO
                        </h2>
                        <p class="text-gray-300 text-lg mb-8 leading-relaxed">
                            Fill out the form with any questions or inquiries,
                            and we'll get back to you promptly.
                        </p>

                        <!-- TSK Logo -->
                        <div class="flex justify-center mb-8">
                            <div
                                class="w-24 h-24 bg-gradient-to-br from-orange-500 to-orange-600 transform rotate-45 flex items-center justify-center"
                            >
                                <span
                                    class="text-white font-bold text-2xl transform -rotate-45"
                                    >TSK</span
                                >
                            </div>
                        </div>

                        <!-- Social Links -->
                        <div class="flex justify-center space-x-6">
                            <a
                                href="#"
                                class="text-white hover:text-orange-400 transition-colors"
                            >
                                <svg
                                    class="w-8 h-8"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                    ></path>
                                </svg>
                            </a>
                            <a
                                href="#"
                                class="text-white hover:text-orange-400 transition-colors"
                            >
                                <svg
                                    class="w-8 h-8"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                                    ></path>
                                </svg>
                            </a>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="space-y-6">
                        <form class="space-y-6">
                            <!-- Name and Email Row -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label
                                        class="block text-black font-semibold mb-2"
                                        for="name">NAME</label
                                    >
                                    <input
                                        type="text"
                                        id="name"
                                        name="name"
                                        class="w-full px-4 py-3 bg-white border-2 border-gray-300 rounded-lg focus:outline-none focus:border-black transition-colors"
                                        required
                                    />
                                </div>
                                <div>
                                    <label
                                        class="block text-black font-semibold mb-2"
                                        for="email">EMAIL</label
                                    >
                                    <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        class="w-full px-4 py-3 bg-white border-2 border-gray-300 rounded-lg focus:outline-none focus:border-black transition-colors"
                                        required
                                    />
                                </div>
                            </div>

                            <!-- Message -->
                            <div>
                                <label
                                    class="block text-black font-semibold mb-2"
                                    for="message">MESSAGE</label
                                >
                                <textarea
                                    id="message"
                                    name="message"
                                    rows="6"
                                    class="w-full px-4 py-3 bg-white border-2 border-gray-300 rounded-lg focus:outline-none focus:border-black transition-colors resize-vertical"
                                    required></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div class="flex justify-end">
                                <button
                                    type="submit"
                                    class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-200 transform hover:scale-105"
                                >
                                    SEND MESSAGE
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Footer Info -->
            <div class="max-w-4xl mx-auto mt-20 text-center">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                    <div>
                        <h3 class="text-2xl font-bold text-black mb-4">
                            Tehn Sound Kits
                        </h3>
                        <p class="text-black leading-relaxed">
                            Tehn Sound Kits provides high-quality sample packs
                            and sound design tools, combining analog warmth with
                            digital precision.
                        </p>
                    </div>
                    <div>
                        <p class="text-black leading-relaxed">
                            Focused on depth, texture, and sonic character, our
                            collections offer producers and sound designers
                            mesmeric sonic tools for ambient, and experimental
                            electronic music, ambient, and beyond.
                        </p>
                    </div>
                </div>

                <!-- Social Follow Button -->
                <div class="mt-12">
                    <button
                        class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-full transition-colors duration-200"
                    >
                        Follow on Shop
                    </button>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    // Handle form submission
    document.querySelector("form")?.addEventListener("submit", (e) => {
        e.preventDefault();
        // Handle form submission here
        alert("Thank you for your message! We'll get back to you soon.");
    });
</script>

