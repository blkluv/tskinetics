---
import Layout from "../../layouts/Layout.astro";

const collections = [
    {
        title: "DRUM KITS",
        description: "Complete drum kits and sample packs for your productions",
        href: "/collections/drum-kits",
        image: "/images/drum_kits_curated.jpg"
    },
    {
        title: "ONE SHOTS",
        description: "Individual samples, sounds, and one-shot audio files",
        href: "/collections/one-shots",
        image: "/images/one_shots.jpg"
    },
    {
        title: "PRESETS",
        description: "Synthesizer presets and sound bank configurations",
        href: "/collections/presets",
        image: "/images/presets_curated.jpg"
    },
    {
        title: "MIDI",
        description: "MIDI files and musical sequences for your DAW",
        href: "/collections/midi",
        image: "/images/midi.png"
    },
    {
        title: "BUNDLES",
        description: "Curated bundles of sound packs, presets, and samples",
        href: "/collections/bundles",
        image: "/images/bundles_curated.jpg"
    }
];
---

<Layout title="Collections - TSK Sound Kits">
    <main class="min-h-screen bg-[#151515] py-12">
        <div class="container mx-auto px-4">
            <!-- Collections Header -->
            <div class="text-center mb-16">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
                    CURATED SOUND SELECTIONS
                </h1>
                <p class="text-gray-400 text-lg max-w-3xl mx-auto">
                    Explore our carefully organized collections of high-quality sound kits, 
                    samples, and production tools designed to elevate your music.
                </p>
            </div>

            <!-- Collections Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
                {collections.map((collection) => (
                    <a 
                        href={collection.href}
                        class="group card-hover bg-[#1a1a1a] rounded-lg overflow-hidden border border-gray-700 hover:border-purple-500/50 transition-all duration-300"
                    >
                        <!-- Collection Image -->
                        <div class="aspect-video relative overflow-hidden">
                            <img 
                                src={collection.image} 
                                alt={`${collection.title} collection`}
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            />
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
                        </div>
                        
                        <!-- Collection Info -->
                        <div class="p-6">
                            <h3 class="text-white text-xl font-bold group-hover:text-purple-400 transition-colors mb-3">
                                {collection.title}
                            </h3>
                            <p class="text-gray-400 text-sm leading-relaxed">
                                {collection.description}
                            </p>
                            
                            <div class="mt-4 flex items-center text-purple-500 text-sm font-semibold">
                                <span>Explore Collection</span>
                                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </div>
                    </a>
                ))}
            </div>

            <!-- Call to Action -->
            <div class="text-center mt-16">
                <div class="bg-gray-800/30 backdrop-blur-sm rounded-2xl p-8 max-w-2xl mx-auto border border-gray-700/30">
                    <h3 class="text-2xl font-bold text-white mb-4">
                        Can't Find What You're Looking For?
                    </h3>
                    <p class="text-gray-400 mb-6">
                        Browse our complete catalog of sound kits and production tools.
                    </p>
                    <a 
                        href="/products" 
                        class="btn-smooth inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-8 rounded-lg transition-colors"
                    >
                        View All Products
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>